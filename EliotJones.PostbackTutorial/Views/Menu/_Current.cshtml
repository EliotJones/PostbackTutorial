@model EliotJones.PostbackTutorial.ViewModels.Menu.OrderViewModel
           
<div class="form-group">
    @Html.LabelFor(m => m.SelectedMenuItem, "Select a menu item", new { @class = "dropdown-label" })
    @Html.ValidationMessageFor(m => m.SelectedMenuItem)
    @Html.DropDownListFor(m => m.SelectedMenuItem, Model.CurrentMenuItems, "Please select", new { @class = "form-control dropdown" })
    <button class="btn btn-info" type="submit" name="submit" value="add" onclick="addMore(event);"><span class="glyphicon glyphicon-plus"></span>Add another</button>
</div>