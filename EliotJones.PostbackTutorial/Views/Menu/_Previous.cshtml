@model EliotJones.PostbackTutorial.ViewModels.Menu.OrderViewModel

@if (Model.SelectedItems != null && Model.SelectedItems.Count > 0)
{
    for (int i = 0; i < Model.SelectedItems.Count; i++)
    {
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedItems[i], "Select a menu item", new { @class = "dropdown-label" })
            @Html.ValidationMessageFor(m => m.SelectedItems[i])
            @Html.DropDownListFor(m => m.SelectedItems[i], Model.PreviousMenuItems[i], new { @class = "form-control dropdown" })
        </div>
    }
}